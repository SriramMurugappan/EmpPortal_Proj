@model List<WebApplication2.Models.Domain.Employee>
@{
}


<h1>Employee List</h1>

<div class="mb-3">

    <input type="text" class="form-control" placeholder="Search for an Employee..." id="searchInput">

</div>
<style>
	table, th, td {
		border: 1px solid black;
		border-collapse: collapse;
	}
	
</style>
<table class="table table-hover table-light" >
	<thead class="thead-dark">
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Salary</th>
			<th>Date Of Birth</th>
			<th>Department</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var employee in Model)
		{
			<tr>
				<td>@employee.Id</td>
				<td>@employee.Name</td>
				<td>@employee.Email</td>
				<td>@employee.Salary</td>
				<td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
				<td>@employee.Department</td>
				<td>
					<a href="Employees/View/@employee.Id"><button class="btn btn-outline-success">View/Edit</button></a>

			</td>
				
			</tr>
			
		}
	</tbody>
</table>

@section scripts {
<script>
        $(function () {
            $("#searchInput").on("input", function () {
                var searchTerm = $(this).val().toLowerCase();
 
                $("tbody tr").each(function () {
                    var rowText = $(this).text().toLowerCase();
 
                    if (rowText.includes(searchTerm)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
</script>
}